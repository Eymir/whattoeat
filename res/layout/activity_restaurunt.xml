<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/border"
    tools:context=".RestauruntActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
		android:background="@drawable/border" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_alignRight="@+id/editText1"
            android:layout_below="@+id/editText1"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:id="@+id/ImageView02"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_alignTop="@+id/imageView2"
            android:layout_toLeftOf="@+id/imageView2"
            android:src="@drawable/ic_launcher" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imageView1"
            android:ems="10"
            android:text="黑白雙貓跳恰恰" />

        <ImageView
            android:id="@+id/ImageView03"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_alignTop="@+id/ImageView02"
            android:layout_toLeftOf="@+id/ImageView02"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:id="@+id/ImageView04"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_alignTop="@+id/ImageView03"
            android:layout_toLeftOf="@+id/ImageView03"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:id="@+id/ImageView01"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_alignTop="@+id/ImageView04"
            android:layout_toLeftOf="@+id/ImageView04"
            android:src="@drawable/ic_launcher" />

    </RelativeLayout>

</LinearLayout>
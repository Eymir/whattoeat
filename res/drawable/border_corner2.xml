<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >


<item android:top="-1dp" android:right="-1dp" android:left="-1dp" android:bottom="-1dp">
    <shape>
        <solid  android:color="@android:color/transparent"/>
        
        <stroke
            android:width="2dp"
            android:color="#ff9801" />
        
    <padding android:left="2dp"
             android:top="2dp"
             android:right="2dp"
             android:bottom="2dp"
             /> 

    <corners android:bottomRightRadius="20dp" android:bottomLeftRadius="20dp" 
     android:topLeftRadius="20dp" android:topRightRadius="20dp"
     android:color="#ff9801"/> 
    </shape>
</item>
</layer-list>